@model WebStore.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<section id="form"><!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="login-form"><!--login form-->
                <h2>Login to your account</h2>
                <form method="post" asp-antiforgery="true" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>    

                    <input asp-for="UserName" placeholder="@nameof(Model.UserName)"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    
                    <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                    <span asp-validation-for="Password" class="text-danger"></span>
 
                    <span>
                        <input asp-for="RememberMe" class="checkbox">
                        Запомнить меня
                    </span>

                    <button type="submit" class="btn btn-default">Войти</button>
                </form>
            </div><!--/login form-->
        </div>
    </div>
</section><!--/form-->